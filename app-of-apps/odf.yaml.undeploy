---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: odf
  namespace: openshift-gitops
spec:
  destination:
    namespace: openshift-gitops
    server: 'https://kubernetes.default.svc'
  project: default
  source:
    repoURL: https://github.com/wcushen/aws-ipi.git
    path: applications/odf
    targetRevision: main
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - Validate=true